<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Clientes </title>
    <!-- Aquí puedes agregar enlaces a tus hojas de estilo CSS -->
    <link rel="stylesheet" href="./css/Clientes/Clientes.css">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <h1>Listado de clientes</h1>
        </div>
        <div class="row mb-4 d-flex justify-content-start">
            <div class="col-2">
                <a class="btn btn-success" asp-action="Create">Crear Nuevo</a>
            </div>
            
            <div class="col-2">
                <a class="btn btn-success" href="@Url.Action("ClientesConDeuda", "Clientes")">Clientes que deben</a>
            </div>

            
                
            
        </div>
        <div class="row d-flex align-content-start">
            <table class="table table-striped table-bordered">
                <thead class="thead-light">
                    <tr>
                        <th>
                            Nombre
                        </th>
                        <th>
                            Deuda
                        </th>
                        <th>
                            Envio 
                        </th>
                        <th>
                            Envio Pagado
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Deuda)
                            </td>
                            <td>
                                @if (item.Envio)
                                {
                                    <span class="text-success">Envío pendiente</span>
                                }
                                else
                                {
                                    <span class="text-danger">NA</span>
                                }
                            </td>
                            <td>
                                @if (item.PagoEnvio)
                                {
                                    <span class="text-success">Pago de envío realizado</span>
                                }
                                else
                                {
                                    <span class="text-danger">Pago de envío pendiente</span>
                                }
                            </td>
                            <td>
                                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.IdClientePk">Editar</a>
                                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.IdClientePk">Detalles</a>
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdClientePk">Eliminar</a>
                            </td>
                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
    
    <script src="script.js"></script>
</body>
</html>
