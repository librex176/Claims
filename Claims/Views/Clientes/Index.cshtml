@model IEnumerable<Claims.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1>Clientes</h1>

    <p>
        <a class="btn btn-success" asp-action="Create">Crear Nuevo</a>
    </p>

    <table class="table table-striped table-bordered">
        <thead class="thead-light">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Deuda)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Envio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PagoEnvio)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Deuda)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Envio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PagoEnvio)
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.IdClientePk">Editar</a>
                        <a class="btn btn-info" asp-action="Details" asp-route-id="@item.IdClientePk">Detalles</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdClientePk">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
